<Window x:Class="PracaInzynierska.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracaInzynierska"
        mc:Ignorable="d"
        Title="Menadżer oprogramowania" Height="720" Width="1280">
    <Grid>
        <ListView BorderBrush="White" BorderThickness="1" Height="500" ItemsSource="{Binding code.SoftwareItems}"
          Width="800" x:Name="listViewTest" HorizontalAlignment="Center" VerticalAlignment="Center" SelectionMode="Multiple">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="200" Header="title1" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Width="200" Header="title2" DisplayMemberBinding="{Binding Version}"/>
                    <GridViewColumn Width="200" Header="title3" DisplayMemberBinding="{Binding Creator}"/>
                </GridView>
            </ListView.View>
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock FontWeight="Bold" HorizontalAlignment="Stretch" Foreground="Black" FontSize="14" Text="{Binding Category}"/>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>
        </ListView>
        <TextBlock HorizontalAlignment="Left" x:Name="error" Margin="1014,619,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
    </Grid>
</Window>
