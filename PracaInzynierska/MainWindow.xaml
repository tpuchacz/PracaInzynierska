<Window x:Class="PracaInzynierska.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase" 
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d" Title="Menadżer oprogramowania" Height="720" Width="1280" MinHeight="600" MinWidth="900" Background="LightGray">
    <Window.Resources>
        <CollectionViewSource Source="{Binding SoftwareItems}" x:Key="items">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Category"/>
            </CollectionViewSource.GroupDescriptions>
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="Category" />
            </CollectionViewSource.SortDescriptions>
            <CollectionViewSource.LiveFilteringProperties>
                Category
            </CollectionViewSource.LiveFilteringProperties>
        </CollectionViewSource>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ListView BorderBrush="Black" BorderThickness="1" ItemsSource="{Binding Source={StaticResource items}}" x:Name="listViewPrograms"
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionMode="Multiple">
            
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction Command="{Binding SelectionChangedCommand}"
                             CommandParameter="{Binding SelectedItems, ElementName=listViewPrograms}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <ListView.View>
                <GridView>
                    <GridView.ColumnHeaderContainerStyle>
                        <Style TargetType="{x:Type GridViewColumnHeader}">
                            <Setter Property="FontWeight" Value="Bold"></Setter>
                            <Setter Property="Foreground" Value="Black"></Setter>
                            <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Offset="0.0" Color="#0c612e" />
                                        <GradientStop Offset="1.0" Color="#109e49" />
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                    </GridView.ColumnHeaderContainerStyle>

                    <GridViewColumn Width="200" Header="Nazwa" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Width="200" Header="Twórca" DisplayMemberBinding="{Binding Creator}"/>
                    <GridViewColumn Width="200" Header="Ostatnia aktualizacja" DisplayMemberBinding="{Binding LastUpdate}"/>
                    <GridViewColumn Width="200" Header="Wersja" DisplayMemberBinding="{Binding Version}"/>
                    <GridViewColumn Width="200" Header="Obecna wersja" DisplayMemberBinding="{Binding CurrentVersion}"/>
                </GridView>
            </ListView.View>
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="{x:Type GroupItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <Expander HorizontalContentAlignment="Center" x:Name="expander" IsExpanded="True" Margin="5" BorderBrush="DarkGray">
                                            <Expander.Header>
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="Gray" FontSize="26"/>
                                            </Expander.Header>
                                            <ItemsPresenter />
                                        </Expander>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
            </ListView.GroupStyle>
        </ListView>
        
        <TextBox Text="{Binding ProgressText}"
         Grid.Row="1"
         Width="500"
         IsReadOnly="True"
         HorizontalAlignment="Left"
         VerticalContentAlignment="Top"
         ScrollViewer.HorizontalScrollBarVisibility="Auto"
         ScrollViewer.VerticalScrollBarVisibility="Auto"
         ScrollViewer.CanContentScroll="True"
         Margin="10,10,10,35">
        </TextBox>
        
        <Button Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,60,350,0"
                Content="Odśwież" x:Name="refresh" Command="{Binding FetchSoftwareItemsCommand}"></Button>
        <Button Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,60,210,0"
                Content="Usuń zaznaczenie" Click="Button_Click" Command="{Binding SelectionChangedCommand}"></Button>
        <Button Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,60,50,0"
        Content="{Binding InstallButtonText}" x:Name="installButton" IsEnabled="{Binding CanClickInstallButton}" FocusManager.FocusedElement="{Binding ElementName=listViewPrograms}"
        Command="{Binding StartInstallationProcessCommand}"></Button>

        <ProgressBar Style="{StaticResource ProgressBarSuccessStripe}" IsIndeterminate="{Binding OperationInProgress}" Grid.Row="1" Height="25" VerticalAlignment="Bottom"></ProgressBar>
    </Grid>
</Window>
